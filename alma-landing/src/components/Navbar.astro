---
// Navbar Component - Top navigation bar

import logo from '../assets/alma_logo.png';
---

<nav class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200 shadow-sm">
  <div class="max-w-7xl mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      
      <!-- Logo -->
      <div class="flex items-center justify-center w-15 h-15 rounded-xl">
        <img src={logo.src} alt="Logo">
      </div>
      
      <!-- Navigation Links -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#about" class="text-gray-700 hover:text-teal-600 font-medium transition-colors">
          About Us
        </a>
        <a href="#why" class="text-gray-700 hover:text-teal-600 font-medium transition-colors">
          Why Us
        </a>
        <a href="#alma" class="text-gray-700 hover:text-teal-600 font-medium transition-colors">
          Alma
        </a>
        <a href="#contact" class="text-gray-700 hover:text-teal-600 font-medium transition-colors">
          Contact
        </a>
      </div>
      
      <!-- Action Buttons -->
      <div class="flex items-center gap-4">
        <button class="hidden md:block text-gray-700 hover:text-teal-600 font-semibold transition-colors">
          Log In
        </button>
        <button class="bg-teal-500 hover:bg-teal-600 text-white font-semibold px-6 py-2.5 rounded-full transition-all duration-300 shadow-md hover:shadow-lg">
          Get Started
        </button>
        
        <!-- Mobile Menu Button -->
        <button class="md:hidden text-gray-700 hover:text-teal-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
      
    </div>
  </div>
</nav>
